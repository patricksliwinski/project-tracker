<%= stylesheet_link_tag 'project.css' %>

<div class="container-lg">
  <div class="d-flex align-items-end mt-5">
    <h1 class="title"><%= @project.name %></h1>
    <%= button_to 'Delete project', project_path(@project), method: :delete, class: "delete align-self-end"%>
  </div>


  <div class="container mt-3">
    <div class="row row-cols-1 row-cols-md-2 g-5">
      <div class="col">
        <div class="card pb-5 pt-5 border-primary shadow h-100" style="background: none;">
          <div class="card-body">
            <%= render "projects/timer" %>
          </div>
        </div>
      </div>
      <div class="col">
        <div class="card pb-5 pt-5 border-primary shadow h-100 text-center text-white" style="background: none;">
          <div class="card-body">
              <h1>Sessions: <%= @project.num_sessions %></h1>
              <h1>Milestones: <%= @project.num_milestones %></h1>
              <h1>Total Time: <%= @project.total_time %></h1>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div hidden>
      <%= render "sessions/form", session: @session %>
  </div>
</div>